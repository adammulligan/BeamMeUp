%html
  %head
    %meta{:charset => "utf-8"}
    %title Torrent Upload
    %meta{:name => "description", :content => ""}
    %meta{:name => "author", :content => ""}

    :plain
      <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
      <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->

    / Le styles
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'styles'

    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js'
    = javascript_include_tag 'jquery.filedrop'
    = javascript_include_tag 'main'

  %body

    %div= haml :navbar

    .container{ :style => 'margin-top: 60px' }
      %form(method="post" enctype='multipart/form-data')
        #dropbox
          %span.message Drop torrent files here to upload
        %p
          %input{ :type => "file", :name => "upload"}
          %button.btn.btn-primary{ :type => "submit" } Submit
